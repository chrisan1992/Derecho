@model ActivosDerecho.Models.LoginModel

@{
    ViewBag.Title = "Ingreso al sistema";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<section id="loginForm">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>Ingreso al Sistema</legend>
            <section class="col-lg-12">
                <div class="input-group">
                    <span class="input-group-addon">Usuario</span>
                    @Html.TextBoxFor(m => m.UserName, new { type = "text", @class = "form-control", @placeholder = "Nombre de Usuario" })
                </div>
                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "mensajeError" })
            </section>
            <br />
            <br />
            <section class="col-lg-12">
                <div class="input-group">
                    <span class="input-group-addon">Contraseña</span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña" })
                </div>
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "mensajeError" })
            </section>
            <br />
            <br />
            <section class="col-md-6 col-lg-6">
                <div class="input-group">
                    <span class="input-group-addon">
                        @Html.CheckBoxFor(m => m.RememberMe)
                    </span>
                    <input type="text" class="form-control" value="¿Recordarme?">
                </div><!-- /input-group -->
            </section>
            <br />
            <br />
            <section class="col-lg-12">
                <button type="submit" class="btn btn-success">Ingresar</button>
            </section>
        </fieldset>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
